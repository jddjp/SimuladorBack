                                <div class="form-group">
                                    <label class="h5 text-gray-900 ">Monto de crédito: </label>
                                    <input class="currency" type="text" value="10000" name="cantidad" id="cantidad" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" data-type="cantidad" placeholder="cantidad" required /><!--pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$"  data-type="currency"-->
                                </div>
                                <div class="form-group">
                                    <label> <span id="cantidadR" name="cantidadR"></span></label>
                                    <input type="range" min="10000" max="100000" step="1000" value="10000" class="slider" id="cantidadRange" name="cantidadRanged">

                                </div>
                                <div class="form-group">
                                    <label class="h5 text-gray-900">Frecuencia</label>
                                    <select id="frecuencia" class="custom-select" name="frecuencia">

                                        <option value="1">Mensual</option>
                                        <option value="2" default>Quincenal</option>
                                    </select>
                                </div>


                                <div class="form-group">
                                    <label class="h5 text-gray-900">Número de Pagos</label>
  
                                    <input value="10" min="10" max="100" name="plazo" type="text" id="plazo" placeholder="plazo" required>
                                </div>
                                <div class="form-group">
                                    <!--<div class="inputDiv i2"></div>-->
                                    <div class="slidecontainer">
                                        <input type="range" min="10" max="50" step="1" value="10" class="slider" id="plazoR" name="plazoR">
                                        <p>plazo: <span id="plazoRang" name="plazoRang"></span></p>
                                    </div>
                                </div>
                                <label>Amortización</label>
                                <br />
                                <input readonly="readonly" class="currency sinborde" style="font-size:x-large" id="total1">
                                <div class="form-group">
                                    <!--	<input type="submit" id="button" name="button" value="Enviar">-->
                                    <button class="btn-default" type="submit" id="submitform">Tabla amortización</button>
                                </div>
                            </form>
                            

                            <div class="table-wrapper-scroll-y my-custom-scrollbar" id="contenedor" style="overflow-x:auto;">

                            </div>
                            <div class="form-group">
