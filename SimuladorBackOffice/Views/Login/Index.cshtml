    <div class="container col align-self-center col-md-6">
        <div class="row align-items-start">
            <div class="col align-self-center col-md-12">
                <div class="card shadow-lg   ">
                    <div class="text-center ">
                        <h1 class="h4 text-gray-900  text-black">Simulador</h1>
                    </div>
                    <div class="col align-self-center col-md-10">
                        <div class="text-dark">
                            <form id="form-lead" name="forma" method="post">
                                <!--
    <div class="form-group">

        <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
        <label class="col-form-label" for="inlineRadio1">Monto de crédito</label>

